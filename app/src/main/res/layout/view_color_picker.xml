<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/fl_color"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FFFF0000"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_select_shape_white_gradually_trans" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/color_select_shape_black_gradually_trans" />

        <View
            android:id="@+id/view_location"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/color_select_shape_stroke_dot" />

    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp">

        <com.example.colorselectpickerview.color_select.RainbowColorBarView
            android:id="@+id/view_color"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:graph_type="color_strip"
            app:round="5dp" />

        <View
            android:id="@+id/view_select_color_bar"
            android:layout_width="20dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/color_select_shape_color_pick_bar" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp">

        <com.example.colorselectpickerview.color_select.RainbowColorBarView
            android:id="@+id/view_alpha"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:graph_type="alpha_strip"
            app:round="5dp" />

        <View
            android:id="@+id/view_select_alpha_bar"
            android:layout_width="20dp"
            android:layout_height="42dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/color_select_shape_color_pick_bar" />

    </FrameLayout>

    <com.example.colorselectpickerview.color_select.RainbowColorBarView
        android:id="@+id/preview_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        app:graph_type="preview_strip"
        app:round="5dp" />

</LinearLayout>